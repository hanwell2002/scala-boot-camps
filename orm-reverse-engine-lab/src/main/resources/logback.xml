<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} TKD [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--
    Windows PS: mkdir -p C:/var/log/bigdata
    Windows CMD: md -p c:\var\log\bigdata
    Unix Like OS:
        sudo mkdir /var/log/bigdata/
        sudo chown myusername /var/log/bigdata
        sudo chmod 755 /var/log/bigdata
    -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>/var/log/bigdata/database-postgres-scalikejdbc.log</file>
        <!--
        <file>C:/var/log/bigdata/database-postgres-scalikejdbc.log</file>
        -->
        <append>true</append>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} TKD [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <!--<appender-ref ref="STDOUT" />-->
        <appender-ref ref="FILE" />
    </root>
</configuration>
